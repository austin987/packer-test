{
  "variables": {
      "distro": "ubuntu"
  },
  "builders": [
    {
      "type": "docker",
      "image": "{{user `distro`}}:latest",
      "commit": true,
      "changes": [
        "ENTRYPOINT /usr/sbin/nginx -g \"daemon off;\""
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "provisioners/{{user `distro`}}.yml"
    },
    {
      "type": "file",
      "source": "conf/{{user `distro`}}.conf",
      "destination": "/etc/nginx/nginx.conf"
    }
  ]
}
